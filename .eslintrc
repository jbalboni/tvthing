{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/react",
    "prettier/flowtype"
  ],
  "plugins": [
    "flowtype",
    "prettier"
  ],
	"parser": "babel-eslint",
	"parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "prettier/prettier": ["error", {"singleQuote": true, "jsxBracketSameLine": true}],
    "no-unused-vars": [0, { "varsIgnorePattern": "^preact$" }],
    "react/react-in-jsx-scope": 0,
    "react/no-unknown-property": ["error", { "ignore": ["class"] }],
    "react/prop-types": 0,
    "react/no-unused-prop-types": 0,
    "arrow-body-style": 0
  }
}
